# EUPHORIA Production Environment Variables

# Application
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# API Keys (Primary: Google AI)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
COOKIE_SECRET=your_secure_cookie_secret_here
EDGE_SECRET=your_edge_auth_secret_here

# CORS (comma-separated origins)
CORS_ORIGINS=https://euphoria-frontend-2025.s3-website.ap-south-1.amazonaws.com,https://your-domain.com

# AWS (Optional - for TTS)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
POLLY_BUCKET=your-s3-bucket-name

# Database (Optional)
DATABASE_URL=your_database_url_here
